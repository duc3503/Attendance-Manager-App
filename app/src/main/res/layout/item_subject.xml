<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/llParent"
    android:background="@drawable/rounded_corners"
    android:backgroundTint="@color/secondary0"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="1" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:text="CE112.O21.MTCL"
            android:textColor="@color/primary"
            android:layout_weight="1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Computer Architect"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/participant"
            android:text="1 teacher, 40 students"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:textColor="#FF0000" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/time"
            android:text="10:30 - 12:30"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="20sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/classroom"
            android:layout_marginTop="5dp"
            android:text="Room: C301"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true" />


    </LinearLayout>



    <ImageView
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chevron_right_grey"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"/>
</LinearLayout>