<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="start|center_vertical"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back"
        android:tint="@color/primary"
        android:scaleType="centerCrop"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="UseAppTint" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ic_fingerprint"
        android:src="@drawable/ic_fingerprint"
        android:scaleType="fitXY"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/back_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fingerprint_upload"
        android:text="Fingerprint Upload"
        android:textStyle="bold"
        android:textSize="12pt"
        android:textColor="@color/primary"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/ic_fingerprint"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:text="Please put your finger on the fingerprint sensor"
        android:textColor="#747775"
        android:textSize="8pt"
        android:textAlignment="center"
        android:padding="20dp"
        app:layout_constraintTop_toBottomOf="@id/fingerprint_upload"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>